{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "location of resources"
      }
    },
    "rules": {
      "type": "array",
      "defaultValue": []
    },
    "namingInfix": {
      "type": "string"
    },
    "contentRoot": {
      "type": "string"
    }
  },
  "variables": {
    "resourceLocation": "[parameters('location')]",
    "contentRoot": "[parameters('contentRoot')]",
    "loadBalancerName": "[concat(parameters('namingInfix'), '-lb')]",
    "publicIpName": "[concat(variables('loadBalancerName'), '-public-ip')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('publicIpName')]",
      "apiVersion": "2016-03-30",
      "location": "[variables('resourceLocation')]",
      "properties": {
        "publicIPAllocationMethod": "Static",
        "idleTimeoutInMinutes": 4
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[variables('loadBalancerName')]",
      "apiVersion": "2015-01-01",
      "properties": {
        "templateLink": {
          "contentVersion": "1.0.0.0",
          "uri": "[concat(parameters('contentRoot'), '/utilityTemplates/template.network.loadBalancer.json')]"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[variables('resourceLocation')]"
          },
          "rules": {
            "value": "[parameters('rules')]"
          },
          "ipConfiguration": {
            "value": {
              "name": "LoadBalancedPublicIp",
              "properties": {
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIpName'))]"
                }
              }
            }
          },
          "loadDistribution" : {
            "value" : "SourceIp"
          },
          "loadBalancerName": {
            "value": "[variables('loadBalancerName')]"
          },
          "contentRoot": {
            "value": "[variables('contentRoot')]"
          }
        }
      },
      "dependsOn": [
        "[variables('publicIpName')]"
      ]
    }
  ],
  "outputs": {
    "LoadBalancer": {
      "type": "object",
      "value": {
        "backendPools": "[reference(variables('loadBalancerName')).outputs.LoadBalancer.value.backendPools]",
        "ip": "[reference(variables('publicIpName')).ipAddress]"
      }
    }
  }
}